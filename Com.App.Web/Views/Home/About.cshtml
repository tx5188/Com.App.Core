@model IEnumerable<Com.App.Model.Sys.SysUser>
 
 
   <ul class="page-breadcrumb breadcrumb">
                                        <li>
                                            <a href="~/home/Index">首页</a>
                                            <i class="fa fa-circle"></i>
                                        </li>
                                        <li>
                                            <span>关于</span>
                                        </li>
                                    </ul>
    <table>

        <tr>
            <th>Id</th>
            <th>用户名</th> 
             <th>公司</th> 
              <th>部门</th> 
        </tr>

        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem =>item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseDeparment.BaseCompany.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseDeparment.DeptName) 
            </td>
        </tr>
        }
    </table> 
    